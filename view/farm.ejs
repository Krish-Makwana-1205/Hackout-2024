<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>

<body>
    <style>
        body {
            background-color: antiquewhite;
        }

        .block {
            background-color: aquamarine;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 175px;
            width: 750px;
            border-radius: 30px;
        }

        .gap {
            width: 50px;
            height: 5px;
        }

        .ip {
            margin-right: 20px;
            margin-bottom: 20px;
        }

        #fonty {
            font-size: large;
            font-weight: 500;
        }
        .fir{
            display:flex;
            justify-content: center;
            align-items: center;
            width:800px;
        }
        #subbtn{
            margin-left: 250px;
        }
    </style>
    <div class="fir">
        <div id="fonty">Add Farm</div>
    </div>
    <div class="block">
        <br />
        <form method='post' action="/home/farms">
            <input placeholder="farm_id" name="id" type="text" class="ip" />
            <span class="gap"></span>
            <input placeholder="farm name" name="name" type="text" class="ip" />
            <input placeholder="farm area(hectares)" name="area" type="text" class="ip" />
            <br/>
            <select name="soil" required class="ip">
                <option value="">soil type&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</option>
                <option value="black">Black&nbsp;&nbsp;&nbsp;</option>
                <option value="alluvial">Alluvial&nbsp;&nbsp;&nbsp;</option>
                <option value="red">red&nbsp;&nbsp;&nbsp;</option>
            </select>
            <select name="rainfall" required class = "ip">
                <option value="">Rainfall&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</option>
                <option value="vl">0-100</option>
                <option value="l">100-200</option>
                <option value="m">200-300</option>
                <option value="h">300-400</option>
                <option value="vh">above 400</option>
            </select>
            <select name="crop" required class = "ip">
                <option value="">Crop&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</option>
                <option value="wheat">Wheat</option>
                <option value="rice">Rice</option>
                <option value="potato">potato</option>
            </select>
            <br/>
            <input type="submit" value="submit" class="btn btn-success" id = "subbtn" />
        </form>
    </div>
    <div class="fir">
        <div id="fonty">Your Farms</div>
    </div>
    <% if (Array.isArray(farms)) { %>
        <% farms.forEach(farm => { %>
          <li><%= farm.email %></li>
        <% }) %>
      <% } else { %>
        <p>Farms is not an array. Type: <%= typeof farms %></p>
      <% } %>
      
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>